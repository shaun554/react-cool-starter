{
  "name": "react-cool-starter",
  "version": "1.0.0",
  "description": "A starter boilerplate for an universal web application with the best development experience and best practices.",
  "main": "index.js",
  "engines": {
    "node": ">=5.0 <7",
    "npm": ">=3.0 <4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wellyshen/react-cool-starter"
  },
  "keywords": [
    "react",
    "redux",
    "isomorphic",
    "universal",
    "express",
    "webpack 2",
    "immutable",
    "es6",
    "starter kit",
    "boilerpate",
    "hot reloading",
    "babel",
    "postcss"
  ],
  "author": "WellyShen <hivoid19@gmail.com> (https://github.com/WellyShen)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wellyshen/react-cool-starter/issues"
  },
  "homepage": "https://github.com/wellyshen/react-cool-starter",
  "scripts": {
    "start": "better-npm-run start",
    "start:production": "npm run build && npm run start:prod",
    "start:prod": "better-npm-run start:prod",
    "clean": "better-npm-run clean",
    "build": "better-npm-run clean && better-npm-run build",
    "eslint": "better-npm-run eslint",
    "stylelint": "better-npm-run stylelint",
    "lint": "npm run eslint && npm run stylelint"
  },
  "betterScripts": {
    "start": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": "3000"
      }
    },
    "start:prod": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": "8080"
      }
    },
    "build": {
      "command": "webpack --progress --display-error-details --config ./tools/webpack.config.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "es"
      }
    },
    "clean": {
      "command": "rimraf ./public/dist"
    },
    "eslint": {
      "command": "eslint -c .eslintrc ./src ./tools ./index.js"
    },
    "stylelint": {
      "command": "stylelint \"./src/**/*.css\""
    }
  },
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "axios": "^0.14.0",
    "babel-core": "^6.14.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-runtime": "^6.11.6",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "immutable": "^3.8.1",
    "morgan": "^1.7.0",
    "react": "^15.3.1",
    "react-addons-shallow-compare": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-helmet": "^3.1.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-immutable-proptypes": "^2.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-immutable": "^3.0.8",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.3.0",
    "stylelint-webpack-plugin": "^0.3.1",
    "webpack": "^2.1.0-beta.20",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-isomorphic-tools": "^2.5.7"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.11",
    "css-loader": "^0.25.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.0",
    "eslint-plugin-react": "^6.1.2",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.2",
    "postcss": "^5.1.2",
    "postcss-loader": "^0.11.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "url-loader": "^0.5.7"
  }
}
